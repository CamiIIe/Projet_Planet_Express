<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pink_light_2"
    tools:context=".Fragments.VehiculeFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/ic_vehicule"
        app:tint="@color/red_dark" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/mon_v_hicule"
        android:textColor="@color/red_dark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frame_vehicule"
        android:layout_width="350dp"
        android:layout_height="490dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal">
<!--
            <TextView
                android:id="@+id/aucun_vehicule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/aucun_v_hicule_renseign"
                android:textColor="@color/red_dark"
                android:textSize="20sp"
                android:textStyle="bold" />-->

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Immatriculation"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_imma"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Marque"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_marque"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Modèle"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_model"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Type"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_type"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Couleur"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_couleur"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:text="Année"
                android:textColor="@color/red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/frag_vehicule_annee"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red_dark"
                android:textSize="20dp" />

        </RelativeLayout>

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/frag_vehicule_btn_float"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_edit"
        android:layout_marginEnd="20dp" />

</FrameLayout>